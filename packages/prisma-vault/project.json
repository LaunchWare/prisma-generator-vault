{
  "name": "prisma-vault",
  "root": "packages/prisma-vault",
  "sourceRoot": "packages/prisma-vault/src",
  "targets": {
    "test": {
      "executor": "@nx/vite:test"
    },
    "build": {
      "executor": "@nx/rollup:rollup",
      "options": {
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "main": "{projectRoot}/src/index.ts",
        "outputPath": "{workspaceRoot}/dist/packages/prisma-vault",
        "compiler": "swc",
        "format": ["cjs"],
        "assets": [{ "input": ".", "output": ".", "glob": "**/*.*.template" }]
      }
    }
  }
}
